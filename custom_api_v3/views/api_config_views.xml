<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- API Config List View -->
    <record id="view_api_config_list" model="ir.ui.view">
        <field name="name">api.config.list</field>
        <field name="model">api.config</field>
        <field name="arch" type="xml">
            <list string="API Configurations">
                <field name="name"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="rate_limit"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </list>
        </field>
    </record>
    
    <!-- API Config Form View -->
    <record id="view_api_config_form" model="ir.ui.view">
        <field name="name">api.config.form</field>
        <field name="model">api.config</field>
        <field name="arch" type="xml">
            <form string="API Configuration">
                <header>
                    <button name="action_regenerate_key" 
                            string="Regenerate API Key" 
                            type="object" 
                            class="btn-secondary"
                            confirm="Are you sure? This will invalidate the current API key."/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Inactive" bg_color="text-bg-danger" 
                            invisible="is_active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="is_active"/>
                            <field name="rate_limit"/>
                        </group>
                        <group>
                            <field name="api_key" widget="CopyClipboardChar" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="allowed_ips" placeholder="e.g., 192.168.1.1, 10.0.0.1"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- API Config Action -->
    <record id="action_api_config" model="ir.actions.act_window">
        <field name="name">API Configuration</field>
        <field name="res_model">api.config</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <!-- Menu Item -->
    <menuitem id="menu_api_config"
              name="Configuration"
              parent="menu_api_root"
              action="action_api_config"
              sequence="10"/>
</odoo>
