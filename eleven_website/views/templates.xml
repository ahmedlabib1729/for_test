<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Custom Header/Navbar -->
    <template id="header_custom" name="Custom Header" inherit_id="website.layout">
    <xpath expr="//header" position="replace">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
        <header class="eleven_header">
            <nav class="eleven_navbar">
                <div class="eleven_nav_container">
                    <!-- Logo -->
                    <div class="eleven_footer_logo">
                        <img src="/eleven_website/static/src/img/Logo -01.png" class="eleven_footer_logo_img" alt="Eleven Scent Logo"/>
                    </div>

                    <!-- Navigation Menu -->
                    <!-- Navigation Menu -->
                        <div class="eleven_nav_menu">
                            <ul class="eleven_nav_list">
                                <li class="eleven_nav_item">
                                    <a href="/" t-att-class="'eleven_nav_link active' if request.httprequest.path == '/' else 'eleven_nav_link'">HOME</a>
                                </li>
                                <li class="eleven_nav_item">
                                    <a href="/about" t-att-class="'eleven_nav_link active' if '/about' in request.httprequest.path else 'eleven_nav_link'">ABOUT US</a>
                                </li>
                                <li class="eleven_nav_item">
                                    <a href="/products" t-att-class="'eleven_nav_link active' if '/products' in request.httprequest.path or '/product/' in request.httprequest.path else 'eleven_nav_link'">PRODUCT</a>
                                </li>
                                <li class="eleven_nav_item">
                                    <a href="/contactus" t-att-class="'eleven_nav_link active' if '/contactus' in request.httprequest.path else 'eleven_nav_link'">CONTACT US</a>
                                </li>
                            </ul>
                        </div>

                    <!-- Right Icons -->
                    <div class="eleven_nav_icons">
                        <!-- Search Icon -->
                        <a href="#" class="eleven_icon_link">
                            <i class="fa fa-search"></i>
                        </a>

                        <!-- User Icon -->
                        <a href="/my/account" class="eleven_icon_link">
                            <i class="fa-regular fa-user"></i>
                        </a>

                        <!-- Wishlist Icon -->
                        <a href="/shop/wishlist" class="eleven_icon_link eleven_wishlist">
                            <i class="fa-regular fa-heart"></i>
                            <span class="eleven_badge">0</span>
                        </a>

                        <a href="/cart" class="eleven_icon_link eleven_cart">
                            <i class="fa-solid fa-basket-shopping"></i>
                            <span class="eleven_badge" t-esc="website.sale_get_order().cart_quantity or 0"/>
                        </a>
                    </div>
                </div>
            </nav>
        </header>
    </xpath>
</template>
    
    <!-- Custom Footer -->
    <template id="footer_custom" name="Custom Footer" inherit_id="website.layout">
        <xpath expr="//footer" position="replace">
            <footer class="eleven_footer">
                <div class="eleven_footer_container">
                    
                    <!-- Left Section - Logo and About -->
                    <div class="eleven_footer_left">
                        <div class="eleven_footer_logo_section">
                            <!-- Temporary Logo - Replace with image later -->
                            <div class="eleven_footer_logo">
                            <img src="/eleven_website/static/src/img/Logo -01.png" class="eleven_footer_logo_img" alt="Eleven Scent Logo"/>
                        </div>
                            
                            <!-- About Text -->
                            <div class="eleven_footer_about_text">
                                <p class="eleven_footer_about">
                                    We are a team of passionate people whose goal is to improve everyone's life through disruptive products. We build great products to solve your business problems.
                                </p>
                                <p class="eleven_footer_about">
                                    Our products are designed for small to medium size companies willing to optimize their performance.
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Right Section - Quick Contact -->
                    <div class="eleven_footer_right">
                        <h4 class="eleven_footer_title">QUICK CONTACT</h4>
                        <p class="eleven_footer_subtitle">
                            If you have any questions or need help, feel free to contact with our team.
                        </p>
                        
                        <!-- Social Media Icons -->
                        <div class="eleven_footer_social">
                            <a href="#" class="eleven_social_icon">
                                <i class="fa fa-facebook"></i>
                            </a>
                            <a href="#" class="eleven_social_icon">
                                <i class="fa fa-instagram"></i>
                            </a>
                            <a href="#" class="eleven_social_icon">
                                <i class="fa fa-tiktok"></i>
                            </a>
                        </div>
                        
                        <!-- Contact Info -->
                        <div class="eleven_footer_contact">
                            <div class="eleven_contact_item">
                                <i class="fa fa-envelope"></i>
                                <div class="eleven_contact_text">
                                    <span class="eleven_contact_label">Send Us Email:</span><br/>
                                    <span class="eleven_contact_value">ElevenScent@Example.com</span>
                                </div>
                            </div>
                            <div class="eleven_contact_item">
                                <i class="fa fa-phone"></i>
                                <div class="eleven_contact_text">
                                    <span class="eleven_contact_label">Call Us Today:</span><br/>
                                    <span class="eleven_contact_value">+1XXX-XXX-XXXX</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </footer>
        </xpath>
    </template>
    
</odoo>
