<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main report template -->
    <template id="report_vendor_bill_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-if="o.move_type == 'in_invoice'">
                    <t t-call="custom_invoice_report.report_vendor_bill_layout">
                        <t t-set="o" t-value="o"/>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <!-- Vendor Bill Layout -->
    <template id="report_vendor_bill_layout">
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-set="company" t-value="o.company_id"/>
            
            <style>
                @page {
                    margin: 0mm;
                    size: A4;
                }
                
                body {
                    font-family: 'Arial', sans-serif;
                    font-size: 10pt;
                    line-height: 1.4;
                    margin: 0;
                    padding: 0;
                    color: #000;
                }
                
                .bill-container {
                    width: 100%;
                    padding: 5mm 10mm 25mm 10mm;
                    min-height: 267mm;
                    box-sizing: border-box;
                }

                .company-header {
                    margin-bottom: 8mm;
                    padding-top: 0;
                }

                .company-logo {
                    max-height: 60px;
                    max-width: 220px;
                    margin-bottom: 3mm;
                }

                .company-info {
                    font-size: 10pt;
                    line-height: 1.4;
                    color: #000;
                    text-align: center;
                }

                .bill-header {
                    display: table;
                    width: 100%;
                    margin-bottom: 8mm;
                }

                .bill-number {
                    text-align: center;
                    font-size: 16pt;
                    font-weight: bold;
                    margin-bottom: 8mm;
                }

                .vendor-name {
                    text-align: right;
                    font-size: 11pt;
                    margin-bottom: 3mm;
                }

                .bill-info-section {
                    display: table;
                    width: 100%;
                    margin-bottom: 8mm;
                }

                .bill-info-left {
                    display: table-cell;
                    width: 50%;
                    vertical-align: top;
                }

                .bill-info-right {
                    display: table-cell;
                    width: 50%;
                    vertical-align: top;
                    text-align: right;
                }

                .info-label {
                    color: #999;
                    font-size: 9pt;
                    margin-bottom: 1mm;
                }

                .info-value {
                    font-weight: normal;
                    font-size: 10pt;
                    margin-bottom: 3mm;
                }

                .items-table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-bottom: 5mm;
                    font-size: 10pt;
                }

                .items-table thead {
                    border-bottom: 2px solid #ddd;
                }

                .items-table th {
                    padding: 3mm 2mm;
                    text-align: left;
                    font-weight: normal;
                    color: #999;
                    font-size: 9pt;
                    border-bottom: 1px solid #ddd;
                }

                .items-table td {
                    padding: 3mm 2mm;
                    border-bottom: 1px solid #f5f5f5;
                }

                .items-table td.right {
                    text-align: right;
                }

                .items-table td.center {
                    text-align: center;
                }

                .totals-section {
                    margin-top: 5mm;
                    margin-bottom: 8mm;
                }

                .totals-table {
                    width: 100%;
                }

                .totals-table td {
                    padding: 2mm 0;
                    text-align: right;
                }

                .totals-table td:first-child {
                    width: 70%;
                }

                .totals-table .total-row {
                    font-weight: bold;
                    font-size: 11pt;
                    border-top: 2px solid #ddd;
                    padding-top: 3mm;
                }

                .payment-terms {
                    margin-bottom: 8mm;
                    font-size: 9pt;
                }

                .signature-section {
                    margin-top: 15mm;
                    border-top: 1px solid #ddd;
                    padding-top: 5mm;
                }

                .signature-row {
                    display: table;
                    width: 100%;
                    margin-bottom: 3mm;
                }

                .signature-cell {
                    display: table-cell;
                    width: 25%;
                    text-align: center;
                    padding: 2mm;
                    vertical-align: top;
                }

                .signature-label {
                    font-weight: bold;
                    font-size: 9pt;
                    margin-top: 10mm;
                    border-top: 1px solid #000;
                    padding-top: 2mm;
                    display: inline-block;
                    min-width: 80px;
                }

                .fixed-footer {
                    position: fixed;
                    bottom: 0;
                    left: 0;
                    right: 0;
                    background-color: #fff;
                    padding: 5mm 15mm;
                    text-align: center;
                    font-size: 8pt;
                    color: #666;
                    border-top: 1px solid #ddd;
                }

                .bold {
                    font-weight: bold;
                }
            </style>

            <div class="bill-container">
                <!-- Company Header with Logo -->
                <div class="company-header">
                    <!-- Logo on the left -->
                    <div style="text-align: left;">
                        <t t-if="company.logo">
                            <img t-att-src="image_data_uri(company.logo)" class="company-logo" alt="Company Logo"/>
                        </t>
                    </div>
                    <!-- Company info centered -->
                    <div class="company-info">
                        <div class="bold" style="font-size: 12pt;"><t t-esc="company.name"/></div>
                        <t t-if="company.street">
                            <div><t t-esc="company.street"/></div>
                        </t>
                        <t t-if="company.street2">
                            <div><t t-esc="company.street2"/></div>
                        </t>
                        <t t-if="company.city">
                            <div><t t-esc="company.city"/></div>
                        </t>
                        <t t-if="company.country_id">
                            <div><t t-esc="company.country_id.name"/></div>
                        </t>
                    </div>
                </div>

                <!-- Vendor Name (right side) -->
                <div class="vendor-name">
                    <t t-esc="o.partner_id.name"/>
                </div>

                <!-- Bill Number (center) -->
                <div class="bill-number">
                    <t t-esc="o.name"/>
                </div>

                <!-- Bill Information -->
                <div class="bill-info-section">
                    <div class="bill-info-left">
                        <div class="info-label">Invoice Date:</div>
                        <div class="info-value">
                            <t t-esc="o.invoice_date.strftime('%d/%m/%Y') if o.invoice_date else ''"/>
                        </div>
                    </div>
                    <div class="bill-info-right">
                        <div class="info-label">Reference:</div>
                        <div class="info-value">
                            <t t-esc="o.ref or o.invoice_origin or ''"/>
                        </div>
                    </div>
                </div>

                <!-- Items Table -->
                <table class="items-table">
                    <thead>
                        <tr>
                            <th style="width: 40%;">Product</th>
                            <th style="width: 10%; text-align: center;">Quantity</th>
                            <th style="width: 15%; text-align: right;">Unit Price</th>
                            <th style="width: 15%; text-align: right;">VAT</th>
                            <th style="width: 20%; text-align: right;">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.invoice_line_ids.filtered(lambda l: l.display_type not in ['line_section', 'line_note'])" t-as="line">
                            <tr>
                                <td>
                                    <!-- Product Name or Description -->
                                    <div style="font-weight: bold;">
                                        <t t-if="line.product_id">
                                            <t t-esc="line.product_id.name"/>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="line.name"/>
                                        </t>
                                    </div>
                                    <!-- Account Code and Name below -->
                                    <div style="font-size: 9pt; color: #666; margin-top: 1mm;">
                                        <t t-esc="line.account_id.code"/> <t t-esc="line.account_id.name"/>
                                    </div>
                                </td>
                                <td class="center">
                                    <t t-esc="'{:.0f}'.format(line.quantity)"/>
                                </td>
                                <td class="right">
                                    <t t-esc="'{:,.3f}'.format(line.price_unit)"/>
                                </td>
                                <td class="right">
                                    <t t-if="line.tax_ids">
                                        <t t-foreach="line.tax_ids" t-as="tax">
                                            <t t-esc="tax.name"/>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        Exempted
                                    </t>
                                </td>
                                <td class="right">
                                    <t t-esc="'{:,.3f}'.format(line.price_subtotal)"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <!-- Totals Section -->
                <div class="totals-section">
                    <table class="totals-table">
                        <tr>
                            <td>VAT</td>
                            <td><t t-esc="'{:,.4f}'.format(o.amount_tax)"/> <t t-esc="o.currency_id.name"/></td>
                        </tr>
                        <tr class="total-row">
                            <td>Total</td>
                            <td><t t-esc="'{:,.3f}'.format(o.amount_total)"/> <t t-esc="o.currency_id.name"/></td>
                        </tr>
                    </table>
                </div>

                <!-- Payment Terms -->
                <div class="payment-terms">
                    <span class="bold">Payment Terms:</span>
                    <t t-if="o.invoice_payment_term_id">
                        Payment terms: <t t-esc="o.invoice_payment_term_id.name"/>
                    </t>
                    <t t-else="">
                        Payment terms: Immediate Payment
                    </t>
                </div>

                <!-- Signature Section (Part of content) -->
                <div class="signature-section">
                    <div class="signature-row">
                        <div class="signature-cell">
                            <div class="signature-label">Received By</div>
                        </div>
                        <div class="signature-cell">
                            <div class="signature-label">Prepared By</div>
                        </div>
                        <div class="signature-cell">
                            <div class="signature-label">Checked By</div>
                        </div>
                        <div class="signature-cell">
                            <div class="signature-label">Approved By</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Fixed Footer -->
            <div class="fixed-footer">
                <t t-if="company.phone">Phone: <t t-esc="company.phone"/>&#160;&#160;</t>
                <t t-if="company.email">Email: <t t-esc="company.email"/>&#160;&#160;</t>
                <t t-if="company.vat">TRN: <t t-esc="company.vat"/></t>
                <div style="margin-top: 2mm; color: #999;">Page: 1 / 1</div>
            </div>
        </div>
    </template>

</odoo>