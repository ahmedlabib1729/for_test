<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ==================== TREE VIEW ==================== -->
    <record id="view_daily_cash_register_list" model="ir.ui.view">
        <field name="name">daily.cash.register.list</field>
        <field name="model">daily.cash.register</field>
        <field name="arch" type="xml">
            <list string="Daily Registers" 
                  decoration-info="state == 'draft'"
                  decoration-success="state == 'posted'"
                  decoration-muted="state == 'cancel'">
                <field name="name"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="line_count"/>
                <field name="total_debit" sum="Total Debit"/>
                <field name="total_credit" sum="Total Credit"/>
                <field name="total_tax" sum="Total Tax" optional="show"/>
                <field name="balance" sum="Balance"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'posted'"
                       decoration-danger="state == 'cancel'"/>
                <field name="move_id" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ==================== FORM VIEW ==================== -->
    <record id="view_daily_cash_register_form" model="ir.ui.view">
        <field name="name">daily.cash.register.form</field>
        <field name="model">daily.cash.register</field>
        <field name="arch" type="xml">
            <form string="Daily Cash/Bank Register">
                <header>
                    <button name="action_post"
                            string="Post"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            invisible="state != 'posted'"
                            groups="account.group_account_manager"/>

                    <button name="action_draft"
                            string="Set to Draft"
                            type="object"
                            invisible="state != 'cancel'"
                            groups="account.group_account_manager"/>

                    <button name="action_view_move"
                            string="View Journal Entry"
                            type="object"
                            class="oe_highlight"
                            invisible="not move_id"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_move"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-book"
                                invisible="not move_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Journal</span>
                                <span class="o_stat_text">Entry</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="date"/>
                            <field name="journal_id"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="journal_account_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="move_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Transaction Lines" name="lines">
                            <field name="line_ids"
                                   widget="one2many"
                                   context="{'default_date': date}">
                                <list string="Transactions"
                                      editable="bottom"
                                      decoration-info="balance &lt; 0"
                                      decoration-danger="balance &gt; 0">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description"/>
                                    <field name="account_id"
                                           options="{'no_create': True}"
                                           domain="[('deprecated', '=', False)]"/>
                                    <field name="partner_id" optional="show"/>
                                    <field name="debit" sum="Total Debit"/>
                                    <field name="credit" sum="Total Credit"/>
                                    <field name="tax_id"
                                           optional="show"
                                           options="{'no_create': True}"/>
                                    <field name="tax_amount" sum="Total Tax" optional="show"/>
                                    <field name="balance"/>
                                    <field name="running_balance" optional="hide"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>

                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_debit" widget="monetary"/>
                                <field name="total_credit" widget="monetary"/>
                                <field name="total_tax" widget="monetary"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="balance"/>
                                </div>
                                <field name="balance" 
                                       class="oe_subtotal_footer_separator" 
                                       widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                            
                            <div class="alert alert-info" role="alert" invisible="state == 'posted'">
                                <strong>ℹ️ Info:</strong> 
                                <p>
                                    The journal account (<field name="journal_account_id" readonly="1" nolabel="1"/>) 
                                    will be automatically used to balance the entry when you post.
                                </p>
                                <p invisible="balance == 0">
                                    A balancing line of 
                                    <strong>
                                        <span invisible="balance &lt;= 0"><field name="balance" widget="monetary" nolabel="1"/> Debit</span>
                                        <span invisible="balance &gt;= 0"><field name="balance" widget="monetary" nolabel="1" 
                                              options="{'currency_field': 'currency_id', 'field_digits': True}"/> Credit</span>
                                    </strong>
                                    will be added to the journal account.
                                </p>
                            </div>
                            
                            <div class="alert alert-success" role="alert" invisible="state != 'posted'">
                                <strong>✅ Posted:</strong> 
                                Journal Entry 
                                <field name="move_id" readonly="1" nolabel="1"/> 
                                has been created.
                            </div>
                        </page>
                    </notebook>
                </sheet>
                
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ==================== SEARCH VIEW ==================== -->
    <record id="view_daily_cash_register_search" model="ir.ui.view">
        <field name="name">daily.cash.register.search</field>
        <field name="model">daily.cash.register</field>
        <field name="arch" type="xml">
            <search string="Search Daily Registers">
                <field name="name" string="Reference"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="move_id"/>
                
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Posted" name="posted" domain="[('state', '=', 'posted')]"/>
                <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                
                <separator/>
                
                <filter string="Today" name="today" 
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="week" 
                        domain="[('date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="month" 
                        domain="[('date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                
                <filter string="Bank Journals" name="bank" domain="[('journal_id.type', '=', 'bank')]"/>
                <filter string="Cash Journals" name="cash" domain="[('journal_id.type', '=', 'cash')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Journal" name="group_journal" context="{'group_by': 'journal_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

</odoo>