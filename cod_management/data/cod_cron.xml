<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_auto_create_cod_batches" model="ir.cron">
            <field name="name">Auto Create COD Batches</field>
            <field name="model_id" ref="model_cod_batch"/>
            <field name="state">code</field>
            <field name="code">model.auto_create_batches_for_all_companies()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <!-- Cron لتحديث عدد أيام التحصيل يومياً -->
        <record id="ir_cron_update_days_since_collection" model="ir.cron">
            <field name="name">Update Days Since COD Collection</field>
            <field name="model_id" ref="shipping_management_system.model_shipment_order"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_days_since_collection()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
