<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_daily_invoices_report_wizard_form" model="ir.ui.view">
        <field name="name">daily.invoices.report.wizard.form</field>
        <field name="model">daily.invoices.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Daily Invoices Report">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" string="Print PDF Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_daily_invoices_report_wizard" model="ir.actions.act_window">
        <field name="name">Print Daily Report</field>
        <field name="res_model">daily.invoices.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
