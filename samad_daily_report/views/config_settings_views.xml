<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Configuration Settings View -->
    <record id="res_config_settings_view_form_daily_invoices" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.daily.invoices</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Daily Invoices Report" name="daily_invoices_settings">
                    <block title="Sales Payment Accounts" name="sales_accounts_config">
                        <setting string="Cash Account"
                                 help="Account used for cash payments in invoice lines">
                            <field name="sales_cash_account_id"
                                   class="oe_inline"/>
                        </setting>
                        <setting string="Bank Account"
                                 help="Account used for bank payments in invoice lines">
                            <field name="sales_bank_account_id"
                                   class="oe_inline"/>
                        </setting>
                        <setting string="Commission Account"
                                 help="Account used for commission in invoice lines">
                            <field name="sales_commission_account_id"
                                   class="oe_inline"/>
                        </setting>
                        <setting string="Commission Tax Account"
                                 help="Account used for commission tax in invoice lines">
                            <field name="sales_commission_tax_account_id"
                                   class="oe_inline"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
